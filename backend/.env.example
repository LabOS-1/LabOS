# ==========================================
# LabOS Backend - Environment Variables Example
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ==========================================

# === Environment ===
ENVIRONMENT=development
DEBUG=true

# === Server URLs (environment-specific) ===
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:18800
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === Server Port ===
PORT=18800

# === Database Credentials ===
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=labos_chat
DEV_DB_NAME=labos_chat_dev
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance

# === API Keys ===
GOOGLE_API_KEY=your-google-api-key
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key
OPENROUTER_API_KEY_STRING=your-openrouter-key

# === LLM Model Selection ===
GEMINI_MODEL=gemini-3-pro-preview

# === Auth0 Credentials ===
AUTH0_SECRET=your-auth0-secret
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# === Email Service (Gmail OAuth2) ===
GMAIL_USER=your-email@gmail.com
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# === Feature Flags ===
ENABLE_MEMORY=false

# === Sandbox Storage ===
# Local dev: ../data/sandboxes
# Docker: /data/sandboxes
SANDBOX_ROOT=../data/sandboxes
GCS_SANDBOX_BUCKET=your-gcs-bucket
SYNC_TO_GCS=false
