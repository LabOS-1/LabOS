# LabOS Backend Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=18800
ENVIRONMENT=development  # Options: development, production
DEBUG=true

# ============================================
# API Keys (REQUIRED)
# ============================================
OPENROUTER_API_KEY_STRING=your_openrouter_api_key_here

# ============================================
# Model Configuration
# ============================================
# Available models via OpenRouter:
# - anthropic/claude-sonnet-4
# - anthropic/claude-3.5-sonnet
# - openai/gpt-4o
# - google/gemini-2.5-pro

LABOS_DEV_MODEL=anthropic/claude-sonnet-4
LABOS_MANAGER_MODEL=anthropic/claude-sonnet-4
LABOS_CRITIC_MODEL=anthropic/claude-sonnet-4
LABOS_TOOL_CREATION_MODEL=anthropic/claude-sonnet-4

# ============================================
# Prompt Version
# ============================================
# Options: v1, v2, v3
# v1 - Original prompt (comprehensive)
# v2 - Optimized prompt (streamlined)
# v3 - GenomeBench enhanced (recommended for genomic tasks)

LABOS_PROMPT_VERSION=v3

# ============================================
# Model Parameters
# ============================================
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=4096
MANAGER_AGENT_MAX_STEPS=30
DEV_AGENT_MAX_STEPS=20
CRITIC_AGENT_MAX_STEPS=10
TOOL_CREATION_AGENT_MAX_STEPS=8

# ============================================
# LabOS Configuration
# ============================================
LABOS_USE_MEM0=true
LABOS_USE_TEMPLATE=true
LABOS_ENABLE_TOOL_CREATION=false
LABOS_USE_DEFAULT_PROMPTS=false
LABOS_MAX_PARALLEL_WORKERS=3
LABOS_TOOL_TIMEOUT=30
LABOS_CACHE_TTL=300

# ============================================
# Memory System (Optional)
# ============================================
MEM0_API_KEY=your_mem0_api_key_here_if_using_mem0

# ============================================
# Database Configuration (Optional)
# ============================================
# For local development, SQLite is used by default
# For production with PostgreSQL/Cloud SQL:

DATABASE_URL=sqlite:///./labos.db
# DATABASE_URL=postgresql://user:password@localhost/labos_db

# Cloud SQL (GCP)
# DB_USER=labos-user
# DB_PASSWORD=your_db_password
# DB_NAME=labos_chat
# DEV_DB_NAME=labos_chat_dev
# CLOUD_SQL_CONNECTION_NAME=your-project:region:instance

# ============================================
# Security
# ============================================
SECRET_KEY=labos-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth0 (Optional)
# AUTH0_SECRET=your_auth0_secret
# AUTH0_BASE_URL=http://localhost:3000
# AUTH0_ISSUER_BASE_URL=your_auth0_domain
# AUTH0_CLIENT_ID=your_auth0_client_id
# AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================
# WebSocket Configuration
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_PING_TIMEOUT=180
WS_MAX_CONNECTIONS=100
WS_RECEIVE_TIMEOUT=120

# ============================================
# Performance & Monitoring
# ============================================
ENABLE_TRACING=false
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006
PHOENIX_PROJECT_NAME=labos

# File Storage
MAX_FILE_SIZE=10485760  # 10MB

# Tool Creation
TOOL_TESTING_TIMEOUT=30
